<idea-plugin>
    <id>ca.ualberta.cs.smr</id>
    <name>RefMerge</name>
    <vendor>University of Alberta</vendor>

    <description>
        Test refactoring tool to explore refactoring capabilities.
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.java</depends>
    <depends>Git4Idea</depends>

<!--    <extensions defaultExtensionNs="com.intellij">-->
<!--        &lt;!&ndash; Add your extensions here &ndash;&gt;-->
<!--        <appStarter implementation="ca.ualberta.cs.smr.core.Evaluation"/>-->
<!--    </extensions>-->


    <extensions defaultExtensionNs="com.intellij">
        <appStarter implementation="ca.ualberta.cs.smr.evaluation.EvaluationPipeline"/>
    </extensions>

    <actions>
        <action id="RefMerge" class="ca.ualberta.cs.smr.core.RefMerge" text="RunRefMerge"
                description="RunRefMerge will run RefMerge, merging the parent commits while considering the refactoring semantics" >
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
<!--        <action id="ca.ualberta.cs.smr.PipelineAction" class="ca.ualberta.cs.smr.evaluation.PipelineAction" text="RunEvaluationPipeline"-->
<!--                description="Will run evaluation pipeline" >-->
<!--            <add-to-group group-id="ToolsMenu" anchor="first"/>-->
<!--        </action>-->
    </actions>
</idea-plugin>